# AWS Configuration
AWS_REGION=us-east-1

# Bedrock Configuration
# Using cross-region inference profile for Claude Sonnet 4 (latest model, May 2025)
# The "us." prefix enables cross-region routing for better availability
BEDROCK_MODEL_ID=us.anthropic.claude-sonnet-4-20250514-v1:0
BEDROCK_AGENT_NAME=AgentCore
BEDROCK_KNOWLEDGE_BASE_NAME=AgentCoreKnowledgeBase

# Lambda Configuration
LAMBDA_TIMEOUT_SECONDS=300
LAMBDA_MEMORY_MB=1024

# Network Configuration
VPC_CIDR=10.0.0.0/18
VPC_MAX_AZS=2

# Monitoring Configuration
ALERT_EMAIL=admin@example.com
ENABLE_MONITORING=true

# OpenSearch Configuration
OPENSEARCH_COLLECTION_NAME=bedrock-agent-vectors
OPENSEARCH_INDEX_NAME=bedrock-knowledge-base-index

# API Configuration
CORS_ENABLED=true
CORS_ORIGINS=*

# Optional: Custom domain name (leave empty to use CloudFront domain)
DOMAIN_NAME=

# Cost optimization settings
CLOUDFRONT_PRICE_CLASS=PriceClass_100
