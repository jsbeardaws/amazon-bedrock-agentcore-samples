{
  "name": "knowledge-base-rag-agent-infrastructure",
  "version": "1.0.0",
  "description": "CDK Infrastructure for Knowledge Base RAG Agent",
  "main": "bin/app.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration",
    "test:stacks": "jest test/stacks",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "type-check": "tsc --noEmit",
    "cdk": "cdk --app \"npx ts-node bin/infrastructure.ts\"",
    "deploy": "./deploy.sh",
    "destroy": "cdk destroy --all",
    "synth": "cdk synth",
    "diff": "cdk diff",
    "security:cfn-nag": "cfn_nag_scan --input-path cdk.out --template-pattern=\".*\\.template\\.json$\"",
    "security:scan": "npm run synth && npm run security:cfn-nag",
    "validate": "npm run lint:check && npm run format:check && npm run type-check && npm run test && npm run security:scan"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.152",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.7.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "aws-cdk": "^2.236.0",
    "cdk-nag": "^2.37.55",
    "esbuild": "0.27.2",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0"
  },
  "dependencies": {
    "@aws-cdk/aws-bedrock-agentcore-alpha": "2.236.0-alpha.0",
    "@aws-lambda-powertools/logger": "^2.0.0",
    "aws-cdk-lib": "^2.236.0",
    "constructs": "^10.4.2",
    "dotenv": "^16.3.1",
    "source-map-support": "^0.5.21"
  }
}
